{
  "compilerOptions": {
      "allowJs": true,
      "esModuleInterop": true,
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./build",
      "resolveJsonModule": true,
      "strict": true,
      "strictNullChecks": true,
      "target": "es6",
      "lib": ["es2020"]
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules"]
}